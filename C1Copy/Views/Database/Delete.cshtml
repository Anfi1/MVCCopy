@model Client
@{
    ViewBag.Title = "Удаление пользователя";
}
 
<div>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
 
    <div>
            <form asp-controller="Database" asp-action="Delete" method="post">
                <div class="form-group">
                    <input type="submit" class="btn btn-default" value="Удалить" />
                    <button name="action" value="Back" class="btn btn-default">Назад</button>
                </div>
            </form>
        </div>
</div>