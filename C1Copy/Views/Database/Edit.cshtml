@model Client
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="Database" asp-route-id="@Model.ID">
    <div class="form-group">
        <label asp-for="@Model.Name" class="control-label">Имя</label>
        <input type="text" asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
        <button name="action" value="Back" class="btn btn-default">Назад</button>
    </div>
</form>