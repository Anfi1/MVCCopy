@model Client
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    @try
    {


        <dl class="dl-horizontal">
            <dt>Идентификатор</dt>
            <dd>@Model.ID</dd>

            <dt>Имя</dt>
            <dd>@Model.Name</dd>

            <dt>Юр Лицо</dt>
            <dd>@Model.LegalEntitie.Name</dd>
            
            <dt>Адрес(-a) Офиса</dt>
            @foreach (var item in Model.Offices)
            {
                <dd>@item.Adress</dd>
            }
        </dl>
    }
    catch
    {
    }
    <form asp-controller="Database" asp-action="Details" method="post">
        <div class="form-group">
            <button name="action" value="Back" class="btn btn-default">Назад</button>
        </div>
    </form>
</div>