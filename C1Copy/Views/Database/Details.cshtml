@model ClientModel
@{
    ViewBag.Title = Model.Client.Name;
}
<h2>Пользователь @Model.Client.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Client.ID</dd>
 
        <dt>Имя</dt>
        <dd>@Model.Client.Name</dd>

    </dl>
    <form asp-controller="Database" asp-action="Details" method="post">
        <div class="form-group">
            <button name="action" value="Back" class="btn btn-default">Назад</button>
        </div>
        </form>
</div>